{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "lib": ["es2021"],
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "typeRoots": ["./types"],
    "resolveJsonModule": true,
    "outDir": "build"
  },
  "ts-node": { "esm": true },
  "include": ["src", "types"],
  "exclude": ["node_modules"]
}
